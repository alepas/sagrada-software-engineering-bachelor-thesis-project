<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane styleClass="Window" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.control.guicontroller.EntranceToTheGameController">

    <ImageView fitHeight="705.0" fitWidth="900.0">
        <Image url="@vetrate.jpg" />
    </ImageView>


    <AnchorPane layoutX="192.0" layoutY="81.0" styleClass="Scene">
        <effect>
            <DropShadow color="#2f2424">
                <input>
                    <Glow />
                </input>
            </DropShadow>
        </effect>

        <ImageView fitHeight="550.0" fitWidth="500.0">
            <Image url="@FirstSettings.JPG"/>
        </ImageView>

        <Button fx:id="createGameButton" layoutX="198.0" layoutY="398.0" styleClass="Button" text="Find Game" />

        <Label layoutX="168.0" layoutY="211.0" styleClass="Label" text="Choose Number of Players" />

        <Label fx:id="findPlayersLabel" layoutX="165.0" layoutY="476.0" styleClass="Label" text="Searching for other players." visible="false" />
        <Label fx:id="errorLabel" layoutX="165.0" layoutY="476.0" styleClass="Label" />
        <Button fx:id="personalAreaButton" layoutX="42.0" layoutY="481.0" styleClass="Button" text="Personal Area" />

        <RadioButton fx:id="soloPlayerBox" layoutX="95.0" layoutY="275.0" styleClass="CheckBox" text="1 Player" />
        <RadioButton fx:id="twoPlayersBox" layoutX="295.0" layoutY="275.0" styleClass="CheckBox" text="2 Players" />
        <RadioButton fx:id="threePlayersBox" layoutX="95.0" layoutY="340.0" styleClass="CheckBox" text="3 Players" />
        <RadioButton fx:id="fourPlayersBox" layoutX="295.0" layoutY="335.0" prefHeight="30.0" prefWidth="97.0" styleClass="CheckBox" text="4 Players" />

    </AnchorPane>
</AnchorPane>
